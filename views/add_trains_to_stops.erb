<form action="/assign_trains_to_stops" method="post">
  <input type="hidden" name="_method" value="patch">


  <div class="container row">
    <h1>Assign trains to a stop</h1>
    <div class="col-xs-6">
      <h1>Stops</h1>
      <label for="stop_id">Pick a Stop</label>
      <select id='stop_id' name="stop_id" type="text">
        <%@stops.each() do |stop|%>
          <option value="<%=stop.id()%>"><%=stop.name()%></option>
        <%end%>
      </select>
    </div>
    <div class="col-xs-6">
      <h1>Trains</h1>
      <%@trains.each() do |train|%>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="train_ids[]" value="<%=train.id%>"><%=train.name%>
          </label>
        </div>
      <%end%>
    </div>
    <button type="submit" class="btn btn-alert">Assign Trains to Stop</button>
  </div>
  <a href="/results">Go back to results page</a>


</form>
