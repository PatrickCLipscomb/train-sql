<form action="/assign_stops_to_trains" method="post">
  <input type="hidden" name="_method" value="patch">


  <div class="container row">
    <h1>Assign stops to a train</h1>
    <div class="col-xs-6">
      <h1>Trains</h1>
      <label for="train_id">Pick a train</label>
      <select id='train_id' name="train_id" type="text">
        <%@trains.each() do |train|%>
          <option value="<%=train.id()%>"><%=train.name()%></option>
        <%end%>
      </select>
    </div>
    <div class="col-xs-6">
      <h1>Stops</h1>
      <%@stops.each() do |stop|%>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="stop_ids[]" value="<%=stop.id%>"><%=stop.name%>
          </label>
        </div>
      <%end%>
    </div>
    <button type="submit" class="btn btn-alert">Assign stops to train</button>
  </div>
  <a href="/results">Go back to results page</a>


</form>
